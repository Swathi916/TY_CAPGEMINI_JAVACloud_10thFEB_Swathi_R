package com.tyss.capgemini.collections;

public class ArrayExample {

	public static void main(String[] args) {
		int[] intArray1 = new int[6];//declaration
		int[] intArray2= {10,20,30,40}// dec and initialisation
//		int Array2[] = new int[6];  not proper way of creating data
		intArray1[0]=1;//initialisation
		intArray1[1]=2;
		intArray1[2]=3;
		intArray1[3]=4;
		intArray1[4]=Integer.parseInt("1234");//parse can convert only numstring into integer
		intArray1[5]='A'; //converts to ascii value.
	//	intArray1[5]=Integer.parseInt("stop"); // not possible,throws number format exception
		
		for(int i=0;i<intArray1.length;i++)
		{
			System.out.println("Elements at index: " + i + "=" +intArray1[i]);//utilisation
		}
		for (int i : intArray2) { // foreachloop
			System.out.println("Elements at index: " + i + "=" +intArray2[i]);
			
		}
	}

}
