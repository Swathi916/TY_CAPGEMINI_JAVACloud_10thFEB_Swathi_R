package com.tyss.capgemini.collections;

import java.util.ArrayList;
import java.util.Collection;
import java.util.Collections;

public class ArrayListExample {
	public static void main(String[] args) {
		ArrayList<Integer> arrayList = new ArrayList<Integer>();

		arrayList.add(12);
		arrayList.add(15);
		arrayList.add(16);
		arrayList.add(17);
		arrayList.add(18);
		arrayList.add(19);
		arrayList.add(20);
		arrayList.add(null);
		arrayList.add(118);
		arrayList.add(119);
		arrayList.add(120);
		arrayList.add(230);
		

		System.out.println("size of arraylist: " + arrayList.size());
		Collections.sort(arrayList);//if u have null we get nullpointexception
		System.out.println("elements in arraylist are:" + arrayList);
		System.out.println("value at index 0:" + arrayList.get(0));
//		System.out.println(arrayList.get(1));
//		System.out.println(arrayList.get(2));// throws exception since no element is present at index 3
//		
//		for eachloop
		System.out.println("********************************************");
		System.out.println("output after for each loop ");
		for (Integer integer : arrayList) {
			System.out.println(integer);
			
		}
//		remove method
		System.out.println("********************************************");
         arrayList.remove(4);
         System.out.println("size after removing the element " +arrayList.size());
         System.out.println("elements after removing the value "+arrayList);
         
 //      contains() 
         System.out.println("*********************************************");
         boolean isThere = arrayList.contains(23);
         System.out.println("output of contain method: "+arrayList.contains(25));
         System.out.println("output of contain method: "+arrayList.contains(123));
         System.out.println("output of contain method: "+arrayList.contains("HEY"));
         
 //      rotate       
         System.out.println("*********************************************");
         Collections.rotate(arrayList,arrayList.size());
		}

	}

